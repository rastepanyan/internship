{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-9">
        <div class="card card-outline-secondary">
            <div class="card-header">
                <h5><strong>Contact Us</strong></h5>
            </div>
            {{ form_start(form) }}
                <div class="card text-left">
                    <div class="card-body">
                        <div class="col-md-5 mb-2">
                            <div class="md-form">
                                <strong>
                                    {{ form_row(form.name) }}
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-5 mb-2">
                            <div class="md-form">
                                <strong>
                                    {{ form_row(form.email) }}
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-5 mb-2">
                            <div class="md-form">
                                <strong>
                                    {{ form_row(form.subject) }}
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-10">
                            <strong>
                            {{ form_row(form.message) }}
                            </strong>
                        </div>
                    </div>
                    <div class="card-body">
                        <hr>
                        <label class="col-md-4 control-label"></label>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-danger btn-md">Send</button>
                            <a class="btn btn-info btn-md" href="{{ path('home') }}">Back</a>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
