{% extends 'base.html.twig' %}

{% block body %}
<div class="col-lg-9">
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h5><strong>Messages</strong></h5>
        </div>
        {% for contact in contact %}
        <div class="card text-left">
            <div class="card-body">
                <div class="col-md-5 mb-2">
                    <div class="md-form">
                        <strong>
                            {{ contact.name }}
                        </strong>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-5 mb-2">
                    <div class="md-form">
                        <strong>
                            {{ contact.email }}
                        </strong>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-5 mb-2">
                    <div class="md-form">
                        <strong>
                            {{ contact.subject }}
                        </strong>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-10">
                    <p class="card-text text-justify">{{ contact.message }}</p>
                </div>
            </div>
            <div class="card-body">
                <hr>
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <a class="btn btn-info btn-md" href="{{ path('home') }}">Back</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}